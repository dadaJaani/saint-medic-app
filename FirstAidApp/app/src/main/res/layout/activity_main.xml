<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" >

    <!-- Sliding drawer contatinig one handle view and one content layout that is hidden -->
    <SlidingDrawer
        android:id="@+id/SlidingDrawer"
        android:layout_width="wrap_content"
        android:layout_height="591dp"
        android:layout_gravity="bottom"
        android:content="@+id/contentLayout"
        android:handle="@+id/slideButton"
        android:orientation="vertical"
        android:padding="10dip">

        <!-- Handle button -->
        <Button
            android:id="@+id/slideButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:ems="10"
            android:text="Show"
            android:textColor="#ffffff"></Button>

        <!-- Content Layout -->
        <LinearLayout
            android:id="@+id/contentLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#FFCC"
            android:orientation="vertical"
            android:padding="10dip">

            <TextView
                android:id="@+id/firstTop"
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:layout_margin="2dp"
                android:text="Allergies"
                android:textColor="#ffffff"></TextView>

            <TextView
                android:id="@+id/descript_first"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_margin="2dp"
                android:text="Allergies"
                android:textColor="#ffffff"></TextView>

            <TextView
                android:id="@+id/secTop"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_margin="2dp"
                android:text="Allergies"
                android:textColor="#ffffff"></TextView>

            <TextView
                android:id="@+id/descript_sec"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_margin="2dp"
                android:text="Allergies"
                android:textColor="#ffffff"></TextView>

            <TextView
                android:id="@+id/thirdTop"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_margin="2dp"
                android:text="Allergies"
                android:textColor="#ffffff"></TextView>

            <TextView
                android:id="@+id/descript_third"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_margin="2dp"
                android:text="Allergies"
                android:textColor="#ffffff"></TextView>

            <TextView
                android:id="@+id/fourthTop"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_margin="2dp"
                android:text="Allergies"
                android:textColor="#ffffff"></TextView>

            <TextView
                android:id="@+id/descript_fourth"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_margin="2dp"
                android:text="Allergies"
                android:textColor="#ffffff"></TextView>

        </LinearLayout>
    </SlidingDrawer>
</LinearLayout>